<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.example.memo.post.dao.PostDAO">
	<select id="selectPostListTest" resultType="map">
		select * from `post`
	</select>
	
