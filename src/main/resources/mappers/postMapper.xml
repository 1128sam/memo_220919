<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.example.memo.post.dao.PostDAO">
	<select id="selectPostListTest" resultType="map">
		select * from `post`
	</select>
	
	<!-- <select id="isDuplicatedId" parameterType="string" resultType="boolean">
		SELECT
  			count(*)
  		FROM
  			`user`
  		where
  			`loginId` = #{loginId}
	</select> -->
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{password}
			, #{name}
			, #{email}
			, NOW()
			, NOW()
		)
	</insert>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPostListByUserId" parameterType="int" resultType="com.example.memo.post.Post">
		SELECT 
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	
	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.example.memo.post.Post">
		SELECT
			`id`
			, `userId`
			, `subject`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId} AND `id` = #{postId}
	</select>
	
	<update id="updatePostByPostIdUserId" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			, `updatedAt` = NOW()
			<!-- imagePath가 있을 때만 수정한다. -->
			<if test="imagePath != null">
				, `imagePath` = #{imagePath}
			</if>
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</update>
	
	<delete id="deletePostByPostIdUserId" parameterType="int">
		DELETE FROM `post`
			WHERE `postId` = #{postId}
	</delete>
</mapper>