<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.example.memo.post.dao.UserDAO">
 	<select id="existLoginId" parameterType="string" resultType="boolean">
		SELECT
			COUNT(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>

 	<select id="selectUserByLoginIdPassword" parameterType="map" resultType="com.example.memo.user.model.User">
	 	SELECT
	 		`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `profileImageUrl`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId} AND `password` = #{password}
 	</select>
 </mapper>